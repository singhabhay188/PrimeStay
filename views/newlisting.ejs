<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Listing</title>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        html,
        body {
            width: 100%;
            min-height: 100vh;
        }
        
        nav {
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
        }

        form{
            width: min(600px, 90vw);
        }

        form input, form textarea {
            padding: 10px;
            border: 2px solid #ccc;
            border-radius: 5px;
            outline: none;
            margin-bottom: 10px;
            resize: none;
        }

        form input:focus, form textarea:focus {
            border-color: #ff385c;
        }
    </style>
</head>
<body class="h-full flex flex-col">
    <%- include('./layouts/nav.ejs') %>
    <div id="add-listing" class="flex-1 p-5">
        <!-- <form action="/listing/addd" method="get" enctype="multipart/form-data" class=" flex flex-col mx-auto"> -->
        <form action="/listing/add" method="post" class=" flex flex-col mx-auto">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>

            <label for="description">Description:</label>
            <textarea id="description" name="description" required></textarea>

            <label for="price">Price / Night:</label>
            <input type="number" id="price" name="price" required>

            <label for="location">Location:</label>
            <input type="text" id="location" name="location" required>

            <label for="country">Country:</label>
            <input type="text" id="country" name="country" required>

            <label for="image">Image URL:</label>
            <input type="text" id="image" name="image">

            <button type="submit" class="bg-[#ff385c] px-4 py-2 rounded-lg text-white">Add Listing</button>
        </form>
    </div>

    <%- include('./layouts/footer.ejs') %>
</body>
</html>